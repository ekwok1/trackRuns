<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>trackRuns</title>
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/cosmo/bootstrap.min.css">
    
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/runs/new.css">
</head>
<body>
  <div id="navbar">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">trackRuns</a>
        </div>
    
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/users/<%= user.id %>">Profile <span class="sr-only">(current)</span></a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if (!req.session.id) { %>
              <li><a href="/login">Log In</a></li>
              <li><a href="/signup">Sign Up</a></li>
            <% } else { %>
              <li><a href="/logout">Log Out</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  
  <div class="container-fluid">
    <div class="col-sm-6">
      <form class="form-horizontal" action="/users/<%= user.id %>/runs" method="POST">
        <fieldset>
          <legend>New Run</legend>
          <div class="form-group">
            <label for="origin" class="col-lg-2 control-label">Ran from: </label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="origin" id="inputOrigin" placeholder="Origin">
            </div>
          </div>
          <div class="form-group">
            <label for="destination" class="col-lg-2 control-label">To: </label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="destination" id="inputDestination" placeholder="Destination">
            </div>
          </div>
          <div class="form-group">
            <label for="timeMinutes" class="col-lg-2 control-label">Minutes</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="timeMinutes" id="inputMinutes" placeholder="Minutes">
            </div>
            <label for="timeSeconds" class="col-lg-2 control-label">Seconds</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="timeSeconds" id="inputSeconds" placeholder="Seconds">
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="reset" class="btn btn-default">Reset</button>
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
        </fieldset>
      </form>

      <% if (err) { %>
        <div class="alert alert-dismissible alert-danger" id="alert">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <strong>Warning!</strong>
          <%= err %>
        </div>
      <% } %>

    </div>
  </div>
</body>
</html>





